@model RegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>Kayıt Ol</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            min-height: 100vh;
            background: linear-gradient(135deg, #4f46e5, #9333ea);
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .register-card {
            background: #fff;
            border-radius: 16px;
            padding: 40px;
            width: 100%;
            max-width: 450px;
            box-shadow: 0 20px 40px rgba(0,0,0,.15);
        }

            .register-card h3 {
                font-weight: 700;
                text-align: center;
                margin-bottom: 25px;
            }

        .btn-custom {
            background: #4f46e5;
            border: none;
            padding: 12px;
            font-weight: 600;
        }

            .btn-custom:hover {
                background: #4338ca;
            }
    </style>
</head>
<body>

    <div class="register-card">
        <h3>Kayıt Ol</h3>

        <form method="post">
            <div class="mb-3">
                <label class="form-label">Ad</label>
                <input asp-for="Name" class="form-control" placeholder="Adınızı giriniz" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Soyad</label>
                <input asp-for="Surname" class="form-control" placeholder="Soyadınızı giriniz" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Email Adresi</label>
                <input asp-for="Email" class="form-control" placeholder="ornek@mail.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Kullanıcı Adı</label>
                <input asp-for="UserName" class="form-control" placeholder="kullaniciadi" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Şifreniz</label>
                <input type="password" asp-for="Password" class="form-control" placeholder="****" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="d-grid mt-4">
                <button type="submit" class="btn btn-custom text-white">
                    Hesap Oluştur
                </button>
            </div>
        </form>
    </div>

    <!-- Validation -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@4.0.0/jquery.validate.unobtrusive.min.js"></script>

</body>
</html>
