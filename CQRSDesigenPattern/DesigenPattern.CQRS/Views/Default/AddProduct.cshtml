@using DesigenPattern.CQRS.CQRSPattern.Commands
@model CreateProductCommand
@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.rtl.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

<form method="post" asp-action="AddProduct" class="form-control">
    <label>Ürün adı</label>
    <input type="text" asp-for="Name" class="form-control"/>
    <br />
    <label>Ürün fiyatı</label>
    <input type="text" asp-for="Price" class="form-control"/>
    <br />
    <label>Ürün stoğu</label>
    <input type="text" asp-for="Stock" class="form-control"/>
    <br />
    <label>Ürün açıklaması</label>
    <textarea  class="form-control" asp-for="Description" rows="5"></textarea>
    <br />
    <button class="btn btn-info">Ekle</button>
</form>